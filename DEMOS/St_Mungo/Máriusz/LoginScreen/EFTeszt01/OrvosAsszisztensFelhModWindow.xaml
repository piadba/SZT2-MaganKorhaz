<Window x:Class="EFTeszt01.OrvosAsszisztensFelhModWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFTeszt01"
        mc:Ignorable="d"
        Title="Felhasználói Adatmódosítás" Icon="HOSPICON.png" Height="150" Width="300">
    <Grid>
        <Label x:Name="label" Content="Felhasználónév:" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Jelszó:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Button x:Name="modBtn" Content="Módosít" HorizontalAlignment="Left" Margin="28,85,0,0" VerticalAlignment="Top" Width="75" Click="modBtn_Click"/>
        <Button x:Name="torlesBtn" Content="Felhasználó törlése" HorizontalAlignment="Left" Margin="152,85,0,0" VerticalAlignment="Top" Width="111"/>
        <TextBox x:Name="felhTb" HorizontalAlignment="Left" Height="23" Margin="152,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Orvos.UserName}"/>
        <TextBox x:Name="jszTb" HorizontalAlignment="Left" Height="23" Margin="152,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Orvos.Password}"/>

    </Grid>
</Window>
